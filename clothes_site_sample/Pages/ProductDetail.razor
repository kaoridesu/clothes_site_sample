<div class="" style="">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="display-4 text-center border-bottom border-dark">GRL</h1>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @foreach (var masterCloth in masterClothImageRepository.FindAllBy(x=> x.MasterClothId ==15))
                    {
                        <div class="carousel-item @(masterCloth.Id == 1 ? "active" : "") ">
                            <img src="@(masterCloth.Url)" alt="" class="d-block w-70 m-auto">

                        </div>
                    }
                    @foreach (var masterCloth in masterClothColorRepository.FindAllBy(x => x.MasterClothesId==15))
                    {
                        <div class="carousel-item">
                            <img src="@(masterCloth.ImageUrl)" alt="" class="d-block w-70 m-auto">

                        </div>
                    }

                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">

            <text style="color:#FFFFFF; background-color:#FFCBCB; ">NEW</text>
            <p class="text-left">今田美桜 ボリュームティアードシャツワンピース[k8799w]</p>

        </div>
    </div>
</div>


